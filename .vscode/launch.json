{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug NestJS",
			"runtimeExecutable": "pnpm",
			"runtimeArgs": ["run", "dev"],
			"sourceMaps": true,
			"envFile": "${workspaceFolder}/.env",
			"cwd": "${workspaceRoot}",
			"console": "integratedTerminal",
			"restart": true,
			"protocol": "inspector",
			"skipFiles": ["<node_internals>/**"]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug E2E Tests",
			"runtimeExecutable": "pnpm",
			"runtimeArgs": ["run", "test:e2e:watch"],
			"sourceMaps": true,
			"envFile": "${workspaceFolder}/.env.test",
			"cwd": "${workspaceRoot}",
			"console": "integratedTerminal"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Unit Tests",
			"runtimeExecutable": "pnpm",
			"runtimeArgs": ["run", "test:watch"],
			"sourceMaps": true,
			"cwd": "${workspaceRoot}",
			"console": "integratedTerminal"
		}
	]
}
